[general]
database: sqlite  # or mysql
shortener: iorek
# handlers:  ...
rewriters: google
#minimum_length: 0
#allow_interpolation: True

[sqlite]
filename: /path/to/sqlite.db

[mysql]
host: host
name: name
user: user
password: password

[twitter]
consumer_key: get
consumer_secret: these
access_token_key: from
access_token_secret: twitter

[burrowiki]
loginpage: url
user: user
password: password

[browser]
cookiejar: /path/to/cookies.txt
passwords: /path/to/passwords.csv
#capath: /path/to/ca-bundle/use/only/if/needed

[wolframalpha]
appid: appid

[google]
regex: ^(\w*\s*\|\s*|)@google (.*)
rewriter: from urllib import urlencode
  terms = urlencode({'btnI' : "I'm Feeling Lucky", 'q' : match.group(2)})
  line = "http://www.google.com/search?hl=en&ie=ISO-8859-1&%s" % terms

[calc] # requires wolframalphahelper
regex: ^@calc\s+(.*)
rewriter: from urllib import quote_plus
  terms = quote_plus(match.group(1))
  line = "http://www.wolframalpha.com/input/?i=%s" % terms
